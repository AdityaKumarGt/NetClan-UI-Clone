<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.parent_fragments.NetworkFragment">


    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/background2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_12ssp"
            android:layout_weight="1"
            android:text="New Invitations"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_12ssp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="All Invitations"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginVertical="@dimen/_25sdp"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_height="match_parent"
            android:background="@drawable/searchicon_bg">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_12ssp"
                android:src="@drawable/baseline_search_24"
                app:tint="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_20ssp"
            android:layout_weight="1"
            android:text="Your connections"
            android:textColor="@color/textBackground"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/binoculars" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your connections list is Empty"
        android:textColor="@color/textBackground"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_8sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginVertical="@dimen/_22ssp"
        android:layout_marginHorizontal="@dimen/_60sdp"
        android:gravity="center_horizontal"
        android:backgroundTint="@color/background"
        android:background="@drawable/text_purpose_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_2sdp"
            android:gravity="center_horizontal"
            android:text="Save &amp; Explore"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            />
    </LinearLayout>


</LinearLayout>
